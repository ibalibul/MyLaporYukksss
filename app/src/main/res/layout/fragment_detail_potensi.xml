<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailPotensiFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/crd_DPDesa"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp"
            android:layout_width="400dp"
            android:layout_height="470dp">

            <ImageView
                android:id="@+id/img_DPDesaa"
                android:src="@drawable/img_6"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="499dp"/>

            <ImageView
                android:id="@+id/btn_backDPDesa"
                android:src="@drawable/img_2"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="70dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_namePDBungur"
            android:text="Name Desa"
            android:layout_below="@+id/crd_DPDesa"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_DescripsiPDBungur"
            android:text="Descripsi"
            android:layout_below="@+id/txt_namePDBungur"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    

</ScrollView>